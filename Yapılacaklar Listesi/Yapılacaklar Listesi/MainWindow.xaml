<Window x:Class="Yapılacaklar_Listesi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yapılacaklar_Listesi"
        mc:Ignorable="d"
        Title="Yapilacaklar Listesi" Height="450" Width="424"
        ResizeMode="NoResize">

    <Grid x:Name="Alan" Background="#FFE7F040">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Button Click="Button_Click" Content="Kaydet" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" FontWeight="Bold" BorderBrush="Black" Background="#FF0C4404" Foreground="White" />
        <TextBox x:Name ="Text" Grid.ColumnSpan="2" Grid.Column="1" Height="75" Grid.Row="3" Width="380" BorderBrush="Black" Background="White"/>
        <ScrollViewer Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility ="Auto">
            <StackPanel x:Name="Panel" Grid.Column="2" Background="#FFF0EC70" Orientation="Horizontal" >
               
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
